/**app.wxss**/
.container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: row; 
  background: white;
} 


page{
  height: 100%;
}

#calculator {
	width: 700rpx;
	height: 100%;
	margin: 10rpx auto; 
	padding: 20rpx 20rpx 15rpx;  
	background: linear-gradient(#009de4, #8bceec);
	border-radius: 16rpx;
	box-shadow: 0rpx 10rpx #009de4, 0rpx 20rpx 20rpx rgba(0, 0, 0, 0.2); 
}

#screen {
  margin: 1%;
	width: 98%;
	height: 15%;
	background: rgba(0, 0, 0, 0.2);
	border-radius: 8rpx;  
	font-size: 64rpx;
	color: white;
	text-align: right;
  line-height: 2.5;   
	letter-spacing: 2rpx;   
}

#keys {
  margin: 1%;
  width: 98%;
  height: 90%;
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  flex-direction: row;
  height: 15%;
}

.btn {
  width: 23%;
  margin: 1%;
  border-radius: 12rpx;
  vertical-align:middle; 
  text-align: center; 
  user-select: none;
  line-height: 150rpx;
	transition: all 0.2s ease;
}

.reset {
  background: #ff9fa8;
  box-shadow: 0 10rpx #ff7c87;
	/* color: white; */
}

.number {
  box-shadow: 0 10rpx rgba(0, 0, 0, 0.2);
  color: #888;  
  background: white;
}

.operator {
  box-shadow: 0 10rpx rgba(0, 0, 0, 0.2);
  background: #FFF0F5;
}

.eval {
	background: #f1ff92;
	box-shadow: 0 10rpx #9da853; 
	/* color: #888e5f; */
}

.doubleheight {
  height: 190%; 
  line-height: 7;   
}

.doublewidth {
  width: 48%;
}

#audioimagebtn {
  width: 48%;
  height: 90%;
}

.btn:active {
  background: #9c89f6; 
	box-shadow: 0 0 #6b54d3;
	top: 10rpx;
}

.eval:active {
  background: #abb850;
	box-shadow: 0 0 #717a33;
	top: 10rpx;
}

.reset:active {
  background: #f68991;
  top: 10rpx;
	box-shadow: 0 0 #d3545d;
}
